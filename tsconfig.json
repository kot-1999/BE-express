{
  "compilerOptions": {
    "lib": [
      "es2021"
    ],
    "module": "CommonJS",
    "outDir": "./dist",
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "./src/**/*",
    "./config/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}