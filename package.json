{
  "name": "BE-project-01",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "prestart": "npx prisma generate",
    "start": "npm run prestart && cross-env nodemon --watch src -L --verbose --exec \"node --watch -r dotenv/config -r ts-node/register src/index.ts\"",
    "test": "npm run prestart && npm run db:push && mocha -r dotenv/config -r ts-node/register --config .mocharc.js",
    "docker:dev": "docker compose --env-file .env.dev --profile dev up -d && docker attach dev_app",
    "docker:test": "docker compose --env-file .env.test --profile test up -d && docker attach test_app",
    "docker:local:dev": "docker compose --env-file .env.local.dev --profile localDev up",
    "docker:local:test": "docker compose --env-file .env.local.test --profile localTest up",
    "type:check": "tsc --project tsconfig.json --noEmit",
    "db:pull": "npx prisma db pull",
    "db:push": "npx prisma db push",
    "db:seed": "",
    "db:validate": "npx prisma validate",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix",
    "sentry:sourcemaps": "tsc && sentry-cli sourcemaps inject --org null-a63 --project node-express ./dist && sentry-cli sourcemaps upload --org null-a63 --project node-express ./dist"
  },
  "private": true,
