{
  "name": "BE-express",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "cross-env nodemon --watch src -L --verbose --exec \"node --watch -r dotenv/config -r ts-node/register src/index.ts\"",
    "docker:dev": "docker compose --env-file .env.development up",
    "docker:test": "docker compose --env-file .env.testing up",
    "docker:prod": "docker compose --env-file .env.production up",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix"
  },
  "private": true,
  "dependencies": {
    "colors": "1.4.0",
    "config": "3.3.9",
    "cross-env": "7.0.3",
    "dotenv": "16.3.1",
    "express": "4.21.2"
  },
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@types/config": "3.3.0",
    "@types/express": "4.17.17",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "dotenv-cli": "^7.4.4",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.1",
    "globals": "15.14.0",
    "husky": "9.1.7",
    "nodemon": "3.1.9",
    "ts-node": "10.9.1",
    "typescript": "5.3.3",
    "typescript-eslint": "8.18.1"
  }
}
